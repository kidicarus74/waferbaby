- throw_content :title, "Scrawls on waferbaby"
- unless @scrawls.length < 1
  - throw_content :feed, "/wallscrawl"
  %h2
    Scrawls
    = "from #{date_title}" if params["created_year"]
    = " (#{link_to("Add", resource(:scrawls, :new), :title => "Add a scrawl.")})"
  - @scrawls.each do |@scrawl|
    = partial :scrawl
  = paginate(params[:page] ? params[:page].to_i : 1, @count, :default_css => false) if @count > 1
- else
  %h2 Aw, I'm sorry!
  %p There are no scrawls here.